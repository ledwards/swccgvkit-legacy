<h1>Editing user</h1>

<% form_for(@user) do |f| %>
  <%= f.error_messages %>

	<p>
	  <%= f.label :name %><br />
	  <%= f.text_field :name %>
	</p>

	<p>
	  <%= f.submit "Update" %> | <%= link_to "Reset password", "#" %>
	</p>
<% end %>


<table>
	<tr>
		<th>Cardlist</th>
		<th>Actions</th>
	<tr>

	<% @user.cardlists.each do |cardlist| %>
		<tr>
			<td><%= cardlist.title %> (<%= cardlist.total_quantity %>)</td>
			<td>
				<%= link_to "Edit", :controller => "cardlists", :action => "edit", :id => cardlist %>
				<%= link_to "Delete", cardlist, :confirm => 'Are you sure?', :method => :delete %>
			</td>
		</tr>
	<% end %>
</table>

<br/>

<%= link_to 'Show', @user %> |
<%= link_to 'Back', users_path %>
