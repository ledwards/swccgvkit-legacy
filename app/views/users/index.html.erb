<h1>Listing users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Cardlists</th>
    <th>Actions</th>
  </tr>

<% for user in @users[2..-1] %>
  <tr>
    <td><%= link_to user.name, :action => "show", :id => user.id %></td>
    <td>
		<% user.cardlists.each do |c| %>
			<%= link_to c.title, :controller => "cardlists", :action => "show", :id => c.id %> (<%= c.total_quantity %>)
		<% end %>
	</td>
    <td> 
   		<%= link_to 'Edit', edit_user_path(user) %> | 
   		<%= link_to 'Remove', user, :confirm => 'Are you sure?', :method => :delete  %> |
		<%= link_to 'Reset password', :action => "#" %>
	</td>
  </tr>
<% end %>
</table>

<br />

