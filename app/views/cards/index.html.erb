<h1>Listing cards</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Expansion Set</th>
    <th>Side</th>
    <th>Thumbnail url</th>
    <th>Image url</th>
    <th>Vslip url</th>
  </tr>

<% for card in @cards %>
  <tr>
    <td><%=h card.title %></td>
    <td><%=h card.expansion %></td>
    <td><%=h card.side %></td>
    <td><%image_tag card.thumbnail_url %></td>
    <td><%=image_tag card.image_url %></td>
    <td><%=image_tag card.vslip_url %></td>
    <td><%= link_to 'Show', card %></td>
    <td><%= link_to 'Edit', edit_card_path(card) %></td>
    <td><%= link_to 'Destroy', card, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New card', new_card_path %>
